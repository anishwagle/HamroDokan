@model IEnumerable<HamroDokan.Models.Item>

@{
    ViewBag.Title = "Text";
}

<p>@ViewBag.MyString</p>

<table class=" table table-striped">
    <thead>
        <tr>
            <th>Item</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match Any Document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>




                    <td>

                        <h2>@item.Title</h2>
                        <div>
                            <img src="@Html.DisplayFor(modelItem => item.ItemArtUrl)" class="responsive" />
                        </div>


                        <div id="item-details">
                            <p>
                                <em>Category:</em>
                                @item.Category.Name
                            </p>
                            <p>
                                <em>Producer:</em>
                                @item.Producer.Name
                            </p>
                            <p>
                                <em>Price:</em>
                                @String.Format("{0:F}",
                     item.Price)
                            </p>
                            <p class="button1">
                                @Html.ActionLink("Add to cart", "AddToCart",
                             "ShoppingCart", new { id = item.ItemId }, "")
                            </p>
                        </div>

                    </td>

                </tr>
            }
        }

    </tbody>
</table>
